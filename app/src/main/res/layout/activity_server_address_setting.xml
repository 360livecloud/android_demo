<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.qihoo.videocloud.widget.ViewHeader
        android:id="@+id/viewHeaderMine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navbar_height"
        android:layout_gravity="top"
        android:background="@drawable/header_bg" />

    <LinearLayout
        android:id="@+id/layout_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewHeaderMine"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner_server_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"></Spinner>

        <Button
            android:id="@+id/btn_set"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="set" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_setting"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_spinner"
        android:layout_margin="10dp"
        android:divider="@null"></ListView>

</RelativeLayout>


