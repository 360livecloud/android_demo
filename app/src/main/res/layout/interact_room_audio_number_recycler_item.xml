<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/interact_room_item"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/interact_audio_number_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:src="@drawable/audio_num_avatar" />

    <TextView
        android:id="@+id/interact_audio_number_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_weight="1"
        android:text="xxxx" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/interact_audio_number_kick"
        android:layout_marginRight="30dp"
        android:src="@drawable/interact_kick" />
    <!--  <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/interact_number_invite"
       android:layout_marginRight="30dp"
       android:src="@drawable/interact_invite"/>-->

</LinearLayout>
