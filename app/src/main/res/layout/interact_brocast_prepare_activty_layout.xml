<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tool:context="com.qihoo.videocloud.interactbrocast.PrepareInteractBrocastActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/record_prepare_navbar_height"
        android:background="@drawable/header_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/interact_brocast_prepare_header_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scaleType="center"
            android:src="@drawable/nav_back_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="互动直播"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/interact_brocast_prepare_set"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/setting" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#99eeeeee" />

    <!--Bid-->
    <RelativeLayout
        android:id="@+id/interact_business_id_layout"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/s_iv_bid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/bid" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@+id/s_iv_bid"
            android:text="@string/str_config_business_id"
            android:textColor="#333333"
            android:textSize="14dp" />

        <!-- <EditText
             android:id="@+id/interact_brocast_prepare_busuness_id"
             style="@style/record_prepare_edittext"
             android:text="zs_xiaoyouxi" />-->
        <EditText
            android:id="@+id/interact_brocast_prepare_busuness_id"
            style="@style/record_prepare_edittext"
            android:text="@string/config_bid" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#99eeeeee" />

    <!--Cid-->
    <RelativeLayout
        android:id="@+id/interact_channel_id_layout"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/s_iv_cid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/cid" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@+id/s_iv_cid"
            android:text="@string/str_config_channel_id"
            android:textColor="#333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/interact_brocast_prepare_channel_id"
            style="@style/record_prepare_edittext"
            android:text="@string/config_interact_cid" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#99eeeeee" />

    <!--AppSecret-->
    <RelativeLayout
        android:id="@+id/interact_appkey_layout"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/s_iv_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/interact_key" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@+id/s_iv_sn"
            android:text="AppKey"
            android:textColor="@color/recordtextclore"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/interact_brocast_prepare_key"
            style="@style/record_prepare_edittext"
            android:text="@string/config_interact_ak" />
    </RelativeLayout>
    <!--AppSecret-->
    <RelativeLayout
        android:id="@+id/interact_screatkey_layout"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/s_iv_sn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/interact_key" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@+id/s_iv_sn1"
            android:text="SecretKey"
            android:textColor="@color/recordtextclore"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/interact_brocast_prepare_secret_key"
            style="@style/record_prepare_edittext"
            android:text="@string/config_interact_sk" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#99eeeeee" />

    <!--AppSecret-->
    <RelativeLayout
        android:id="@+id/interact_userid_layout"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/s_iv_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/interact_key" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@+id/s_iv_uid"
            android:text="UserId 用户标识"
            android:textColor="@color/recordtextclore"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/interact_brocast_prepare_uid"
            style="@style/record_prepare_edittext"
            android:enabled="false" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#99eeeeee" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#99eeeeee" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#99eeeeee" />

    <RelativeLayout
        android:id="@+id/interact_layout_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/interact_login"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@drawable/header_bg"
            android:text="立即登录"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="互动直播模式"
        android:textColor="#333333"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#99eeeeee" />

    <LinearLayout
        android:id="@+id/interact_brocast_prepare_type1"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:clickable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="主播&#38;嘉宾"
            android:textColor="#333333"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="3dp"
            android:src="@drawable/arrow" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#99eeeeee" />

    <LinearLayout
        android:id="@+id/interact_brocast_prepare_type2"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:clickable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="主播&#38;主播"
            android:textColor="#333333"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="3dp"
            android:src="@drawable/arrow" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#99eeeeee" />

    <LinearLayout
        android:id="@+id/interact_brocast_prepare_type3"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:clickable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="开趴大厅"
            android:textColor="#333333"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="3dp"
            android:src="@drawable/arrow" />

    </LinearLayout>


</LinearLayout>
