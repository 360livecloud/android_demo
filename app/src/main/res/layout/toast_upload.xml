<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7f7b7b7b"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="269.6dp"
        android:layout_height="131dp"
        android:layout_gravity="center"
        android:background="@drawable/toast_upload_bg"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="39.3dp"
            android:layout_height="39.3dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28.3dp"
            android:src="@drawable/upload_toast_success" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="17.3dp"
            android:gravity="center_horizontal"
            android:text="失败"
            android:textColor="#333333"
            android:textSize="13.3sp" />

    </RelativeLayout>

</RelativeLayout>
