<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="259.3dp"
    android:layout_height="123.6dp"
    android:layout_gravity="center"
    android:background="@drawable/progress_dialog_bg">

    <TextView
        android:id="@+id/tv_progress_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8.6dp"
        android:textColor="#333333"
        android:textSize="13.3sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="36dp"
        android:background="#99eeeeee"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56.3dp"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/pb_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="204.3dp"
            android:layout_height="11.3dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6.6dp"
            android:progressDrawable="@drawable/progress_dialog_progressbar_bg" />

        <TextView
            android:id="@+id/tv_percent"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:textColor="#333333"
            android:textSize="13.3sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36.3dp"
        android:background="#99eeeeee"></View>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8.6dp"
        android:padding="5dp"
        android:text="取消"
        android:textColor="#51a7ff"
        android:textSize="13.3sp" />
</RelativeLayout>